<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.android.helloandroid.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/udacity4" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:adjustViewBounds="true"
            android:background="@drawable/android_dev" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/image2"
            android:fontFamily="@font/annie_use_your_telescope"
            android:gravity="center"
            android:text="Udacity"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text1"
            android:fontFamily="@font/annie_use_your_telescope"
            android:gravity="center"
            android:text="2465 Latham St; Mountain View, CA 94043"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text2"
            android:fontFamily="@font/annie_use_your_telescope"
            android:gravity="center"
            android:textSize="15sp"
            android:text="650-555-5555" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/imageView"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:src="@drawable/tel1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/text3"
            android:src="@drawable/google3"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />





    </RelativeLayout>


</ScrollView>
